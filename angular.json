{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "core": {
            "projectType": "library",
            "root": "projects/core",
            "sourceRoot": "projects/core/src",
            "prefix": "volvox",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "tsConfig": "projects/core/tsconfig.lib.json",
                        "project": "projects/core/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/core/tsconfig.lib.prod.json"
                        },
                        "development": {}
                    },
                    "defaultConfiguration": "production"
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": [
                            "projects/core/src/**/*.ts"
                        ]
                    }
                }
            }
        },
        "material": {
            "projectType": "library",
            "root": "projects/material",
            "sourceRoot": "projects/material/src",
            "prefix": "volvox",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "tsConfig": "projects/material/tsconfig.lib.json",
                        "project": "projects/material/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/material/tsconfig.lib.prod.json"
                        },
                        "development": {}
                    },
                    "defaultConfiguration": "production"
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": [
                            "projects/material/src/**/*.ts"
                        ]
                    }
                }
            }
        }
    },
    "defaultProject": "core"
}
