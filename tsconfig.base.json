{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@volvox-ng/core": [
        "dist/@volvox-ng/core",
      ],
      "@volvox-ng/core/*": [
        "dist/@volvox-ng/core/*",
      ],
      "@volvox-ng/material": [
        "dist/@volvox-ng/material",
      ],
      "@volvox-ng/material/*": [
        "dist/@volvox-ng/material/*",
      ]
    },
    "resolveJsonModule": true
  }
}