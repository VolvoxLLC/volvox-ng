{
    "$schema": "http://json-schema.org/schema",
    "id": "PageSchematic",
    "title": "ng new options schema",
    "type": "object",
    "description": "Initialize a new page",
    "properties": {
        "name": {
            "type": "string",
            "description": "Name",
            "$default": {
                "$source": "argv",
                "index": 0
            }
        },
        "prefix": {
            "type": "string",
            "description": "The prefix used"
        },
        "style": {
            "type": "string",
            "description": "The style used"
        },
        "path": {
            "type": "string",
            "format": "path",
            "visible": false
        },
        "skipTests": {
            "type": "boolean",
            "description": "Skip generating spec files"
        },
        "create-facade": {
            "type": "boolean",
            "description": "Create the component with a facade"
        },
        "use-facade-in-template": {
            "type": "boolean",
            "description": "Use the created facade in html template"
        },
        "facade-folder-path": {
            "type": "string",
            "description": "Facades folder path"
        },
        "project": {
            "type": "string",
            "description": "The name of the project.",
            "$default": {
                "$source": "projectName"
            }
        }
    },
    "required": [
        "name"
    ]
}
